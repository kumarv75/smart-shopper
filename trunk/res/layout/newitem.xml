<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_height="wrap_content" android:orientation="vertical" android:layout_width="match_parent">

<EditText android:id="@+id/EditText01" android:layout_height="wrap_content" android:hint="Enter Name Here" android:password="false" android:layout_width="fill_parent" android:inputType="textCapWords" android:lines="1">
</EditText>


<CheckBox android:id="@+id/CheckBox01" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/one_time" android:layout_below="@+id/EditText01" android:layout_centerHorizontal="true"></CheckBox><Button android:id="@+id/Button02" android:layout_height="wrap_content" android:text="@string/cancel" android:layout_alignParentRight="true" android:layout_width="wrap_content" android:layout_below="@+id/CheckBox01" android:onClick="shopper.onClick">
</Button><Button android:id="@+id/Button01" android:layout_height="wrap_content" android:layout_width="fill_parent" android:text="@string/add_item" android:layout_toLeftOf="@+id/Button03" android:layout_below="@+id/CheckBox01" android:onClick="shopper.onClick">
</Button><Button android:id="@+id/Button03" android:layout_height="wrap_content" android:layout_toLeftOf="@+id/Button02" android:text="@string/add_another" android:layout_width="wrap_content" android:layout_below="@+id/CheckBox01" android:onClick="shopper.onClick"></Button>

</RelativeLayout>
